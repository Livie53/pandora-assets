{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react",
		"resolveJsonModule": true
	},
	"include": ["./test/**/*"]
}
